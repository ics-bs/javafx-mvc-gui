<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"  
              prefHeight="600.0" 
              prefWidth="500.0" 
              fx:controller = "se.lu.ics.controllers.MainViewController">
    <children>
        <!-- Customer Information Section -->
        <Label fx:id="labelCustomerId" 
               layoutX="55.0" 
               layoutY="70.0" 
               text="Customer ID" />
        <TextField fx:id="textFieldCustomerId" 
                   layoutX="170.0" 
                   layoutY="70.0" />
        <Label fx:id="labelCustomerName" 
               layoutX="55.0" 
               layoutY="110.0" 
               text="Name" />
        <TextField fx:id="textFieldCustomerName" 
                   layoutX="170.0" 
                   layoutY="110.0" />

        <!-- Credit Card Information Section -->
        <RadioButton fx:id="radioButtonHasCard"
                     layoutX="170.0" 
                     layoutY="160.0" 
                     text="Has card" />
        <RadioButton fx:id="radioButtonNoCard"
                     layoutX="170.0" 
                     layoutY="190.0" 
                     text="No card" />
        <Label fx:id="labelCardNumber" 
               layoutX="55.0" 
               layoutY="240.0" 
               text="Card number" />
        <TextField fx:id="textFieldCardNumber" 
                   layoutX="170.0" 
                   layoutY="240.0" />
        <Label fx:id="labelCardType" 
               layoutX="55.0" 
               layoutY="280.0" 
               text="Card type" />
        <TextField fx:id="textFieldCardType" 
                   layoutX="170.0" 
                   layoutY="280.0" />

        <!-- Action Buttons Section -->
        <Button fx:id="buttonCustomerAdd" 
                layoutX="60.0" 
                layoutY="360.0" 
                onAction="#handleButtonCustomerAddAction" 
                prefHeight="26.0" 
                prefWidth="100.0" 
                text="Add" />
        <Button fx:id="buttonCustomerFind" 
                layoutX="60.0" 
                layoutY="400.0" 
                onAction="#handleButtonCustomerFindAction" 
                prefHeight="26.0" 
                prefWidth="100.0" 
                text="Find" />
        <Button fx:id="buttonCustomerDelete" 
                layoutX="60.0" 
                layoutY="440.0" 
                onAction="#handleButtonCustomerDeleteAction" 
                prefHeight="26.0" 
                prefWidth="100.0" 
                text="Delete" />
        <Button fx:id="buttonCustomerSetName" 
                layoutX="180.0" 
                layoutY="360.0" 
                onAction="#handleButtonCustomerSetNameAction" 
                prefHeight="26.0" 
                prefWidth="100.0" 
                text="Change name" />

        <!-- Response Section -->
        <Label fx:id="labelResponse" 
               layoutX="55.0" 
               layoutY="500.0" 
               prefHeight="17.0" 
               prefWidth="125.0" />
    </children>
</AnchorPane>

